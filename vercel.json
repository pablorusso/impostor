{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/game/(.*)/events",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Connection", 
          "value": "keep-alive"
        },
        {
          "key": "Content-Encoding",
          "value": "none"
        },
        {
          "key": "X-Accel-Buffering",
          "value": "no"
        },
        {
          "key": "X-Vercel-Cache",
          "value": "BYPASS"
        }
      ]
    }
  ],
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  }
}